<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for @user do |form| %>
    <h1 class='mb-3 font-weight-normal'>Sign Up</h1>
    <div style='font-size: 9.5px; color: blue'>
          *Please fill up all fields
    </div>
    <%= render 'shared/error_messages' %>
      <div class='form-group' style='text-align: left'>
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name, class: 'form-control', required: true %>
      </div>
      <div class='form-group' style='text-align: left'>
        <%= form.label :last_name %><br>
        <%= form.text_field :last_name, class: 'form-control', required: true %>
      </div>
      <div class='form-group' style='text-align: left'>
        <%= form.label :email %><br>
        <%= form.email_field :email, class: 'form-control', required: true %>
      </div>
      <div class='form-group' style='text-align: left'>
        <%= form.label :password %><br>
        <%= form.password_field :password, class: 'form-control', required: true %>
        <div style='font-size: 9.5px'>
          *Must contain more than 8 characters with 1 capital letter, 1 small letter, 1 digit, and 1 special character
        </div>
      </div>
      <div class='form-group' style='text-align: left'>
        <%= form.label :password_confirmation %><br>
        <%= form.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>
      <%= form.submit 'Create Account', class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back', sessions_path, class: 'btn btn-danger btn-lg btn-block' %>
    <% end %>
  </div>
</div>
