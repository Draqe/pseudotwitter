<h3>Tweet</h3>

<%= form_with(model: [ @user, @user.tweets.build ], local: true) do |form| %>
  <p>
   <%=form.label :text %>
   <%=form.text_area :text %>
  </p>   
  <p>
    <%= form.submit %>
  </p>
<% end %>
</br>

<h3>Published Tweets</h3>
<table>
  <tr>
    <th>User ID</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.user_id %></td>
      <td><%= tweet.text %></td>
      <td><%= link_to 'Edit', edit_user_tweet_path(tweet) %></td>
      <td><%= link_to 'Delete', user_tweet_path(tweet), method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>