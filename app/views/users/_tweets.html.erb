<h3>Published Tweets</h3>
<table class="table" style='width: 100%; text-align: center'>
  <thead class="thead-dark">
    <tr>
      <th scope="col">User</th>
      <th scope="col">Text</th>
      <th scope="col">Created</th>
    </tr>
  </thead>
  <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.user.first_name + ' ' + tweet.user.last_name %></td>
      <td><%= tweet.text %></td>
      <td><%= tweet.created_at %></td>
      <td><%= link_to 'Reply', new_tweet_reply_path(tweet) %>
      <% if tweet.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_user_tweet_path(@user, tweet) %></td>
        <td><%= link_to 'Delete', [tweet.user, tweet], method: :delete, data: {confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
