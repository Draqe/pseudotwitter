<!DOCTYPE html>
<html>
  <head>
    <title>Pseudotwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>>
      <%= "Logged in as #{current_user.email}" %> | <%= link_to 'Home', tweets_path %> | <%= link_to 'Log Out', session_path(current_user), method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', new_session_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    <hr>
    <% if notice %>
      <%= notice %>
    <% end %>
  
    <% if alert %>
      <%= alert %>
    <% end %>
    <%= yield %>
  </body>
</html>