<%= form_for @user.tweets.build, remote: true do |form| %>
  <div>
    <%= form.text_area :text, class: 'form-control', id: 'text', maxlength: 140, required: true %>
    <div style='font-size: 9.5px'>
      *140 character limit
    </div>
    <%= form.submit 'Tweet', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
