<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= current_user.last_name %></h1>
      <h5><%= current_user.first_name %></h5>
      <h5><%= current_user.email %></h5>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @tweet.type == 'Reply' %>
      <%= render 'tweets/form4' %>
    <% else %>
      <%= render 'tweets/form2' %>
    <% end %>
    <%= render 'users/tweets' %>
  </div>
</div>
