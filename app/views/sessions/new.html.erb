<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <main role='main' class='inner cover'>
      <h1 class='cover-heading'>Welcome to Pseudotwitter.</h1>
    </main>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <h2 class='mb-3 font-weight-normal'>Please sign in</h2>
      <div class='form-group' style='text-align: left'>
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control', required: true %>
      </div>
      <div class='form-group' style='text-align: left'>
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
      <%= f.submit 'Log In', class: 'btn btn-primary btn-lg'%>
    <% end %>
    <h4 class='mb-3 font-weight-normal'>Don't have an account? <%= link_to 'Sign Up Today', new_user_path %></h4>
  </div>
</div>
